{
  "dxt_version": "0.2",
  "name": "@businessradar/businessradar-mcp",
  "version": "0.2.0",
  "description": "The official MCP Server for the Business Radar API",
  "author": {
    "name": "Business Radar",
    "email": "support@businessradar.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/businessradar/businessradar-sdk-typescript.git"
  },
  "homepage": "https://github.com/businessradar/businessradar-sdk-typescript/tree/main/packages/mcp-server#readme",
  "documentation": "https://api.businessradar.com/ext/v3/",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "BUSINESSRADAR_API_KEY": "${user_config.BUSINESSRADAR_API_KEY}"
      }
    }
  },
  "user_config": {
    "BUSINESSRADAR_API_KEY": {
      "title": "api_key",
      "description": "Token-based authentication with required prefix 'Token'",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
